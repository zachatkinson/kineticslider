{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowJs": true,
    "importHelpers": true,
    "noEmit": false,
    "noEmitOnError": false,
    "baseUrl": ".",
    "checkJs": false,
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/@types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/scripts/**/*.cjs",
    "src/__tests__",
    "jest.config.js",
    "jest.setup.js",
    "__mocks__/**/*"
  ]
}