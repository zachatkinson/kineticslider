{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "declaration": false
  },
  "include": [
    "src/__tests__/**/*",
    "./jest.setup.js",
    "./jest.config.js",
    "./__mocks__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}